model User {
  id            Int         @id @default(autoincrement())
  publicAddress String      @unique
  nonce         Int
  email         String      @unique
  username      String?     @unique
  steamId       String      @unique
  firstName     String
  surname       String
  balance       Int         @default(0)    
  verified      Boolean     @default(false)
}

model Nft {
  tokenID       Int     @unique
  charged       Boolean @default(false)
}
